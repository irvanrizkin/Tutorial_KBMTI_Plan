<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/assets/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/global.css">
</head>

<body>
    <nav>
        <div class="nav-wrapper teal lighten-1">
            <div class="container">
                <a href="/homepage" class="brand-logo">Logo</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="">Login</a></li>
                    <li><a href="/users/register-page">Sign In</a></li>
                </ul>
                <a href="#" class="right sidenav-trigger hide-on-large-only" data-target="mobileNav"><i class="material-icons">more_vert</i></a>
                <ul id="mobileNav" class="sidenav">
                    <li><a href="">Login</a></li>
                    <li><a href="/users/register-page">Sign In</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div id="moreNews">
            <h3>Homepage</h3>
            <div class="row white-text">
                {{#each data}}
                <div class="col m4 s12">
                    <div class="card teal lighten-1">
                        <a class="not-link" href="/temp/show-article?id={{id}}">
                            <div class="card-content">
                                <span class="card-title">{{title}}</span>
                                <p class="truncate">{{content}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <script src="/assets/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.sidenav');
            var instances = M.Sidenav.init(elems, {
                edge: 'right'
            });
        });
    </script>
</body>

</html>